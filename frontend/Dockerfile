# Etapa 1: Construir la aplicaci贸n Angular
FROM node:20 AS build

WORKDIR /usr/src/app

# Copiar los archivos de configuraci贸n de npm
COPY package*.json ./

# Instalar dependencias del proyecto
RUN npm install

# Instalar Angular CLI globalmente
RUN npm install -g @angular/cli

# Copiar el resto de los archivos del proyecto
COPY . .

# Configurar soporte para OpenSSL heredado
ENV NODE_OPTIONS=--openssl-legacy-provider

# Construir la aplicaci贸n Angular
RUN npm run build

# Etapa 2: Servir la aplicaci贸n con Nginx
FROM nginx:alpine

COPY dist/user-management-system /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]